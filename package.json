{
  "name": "nx-heroku-deploy-action",
  "version": "1.0.0",
  "description": "Dynamic action that allows to build with external configuration a Docker container and deploy to Heroku Container Registry",
  "main": "dist/main",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/underfisk/nx-heroku-deploy-action.git"
  },
  "keywords": [
    "github",
    "actions",
    "heroku",
    "deploy",
    "container",
    "docker",
    "nx"
  ],
  "author": "Underfisk",
  "license": "MIT",
  "bugs": {
    "url": "hhttps://github.com/underfisk/nx-heroku-deploy-action/issues"
  },
  "homepage": "https://github.com/underfisk/nx-heroku-deploy-action#readme",
  "dependencies": {
    "@actions/core": "^1.2.3",
    "@actions/github": "^2.1.1"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.27.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.9",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^7.17.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^24.1.3",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "js-yaml": "^3.14.0",
    "prettier": "2.2.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  }
}
